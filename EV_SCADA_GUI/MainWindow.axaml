<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EV_SCADA.GUI.MainWindow"
        Width="1000"
        Height="600"
        Background="#101010"
        Title="EV Vehicle Monitoring System">

  <Border Background="#101010" Padding="10">
    <TabControl Background="#101010" BorderThickness="0">

      <!-- Dashboard -->
      <TabItem Header="Dashboard">
        <Grid Background="#101010">
          <TextBlock Text="EV SCADA Dashboard"
                     Foreground="White"
                     FontSize="22"
                     Margin="20,10,0,0"/>
        </Grid>
      </TabItem>

      <!-- Door Control -->
      <TabItem Header="Door Control">
        <Grid Background="#101010" Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
          </Grid.ColumnDefinitions>

          <!-- LEFT SIDE -->
          <StackPanel Grid.Column="0" Margin="10" Spacing="8">

            <TextBlock Text="Door Control"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock x:Name="DoorStateText"
                       Text="State: Locked"
                       Foreground="#DDDDDD"
                       Margin="0,4,0,10"/>

            <Button x:Name="UnlockButton"
                    Content="Unlock Door"
                    Width="150"
                    Click="UnlockButton_Click"/>

            <Button x:Name="LockButton"
                    Content="Lock Door"
                    Width="150"
                    Click="LockButton_Click"/>

            <Button x:Name="GenerateTokenButton"
                    Content="Generate Token"
                    Width="150"
                    Click="GenerateTokenButton_Click"/>
          </StackPanel>

          <!-- RIGHT SIDE LOGS -->
          <Border Grid.Column="1"
                  Margin="10"
                  Background="#202020"
                  CornerRadius="4">

            <StackPanel Margin="10">
              <TextBlock Text="Door Access Logs"
                         Foreground="White"
                         FontWeight="Bold"/>

              <ListBox x:Name="DoorLogsList"
                       Background="#181818"
                       Foreground="White"
                       BorderThickness="0"
                       Height="300"/>
            </StackPanel>

          </Border>
        </Grid>
      </TabItem>

      <!-- Camera -->
      <TabItem Header="Rear Camera">
        <Grid Background="#101010" Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
          </Grid.ColumnDefinitions>

          <!-- Camera Left Side -->
          <StackPanel Grid.Column="0" Margin="10" Spacing="8">

            <TextBlock Text="Rear View Camera"
                       FontSize="20"
                       Foreground="White"
                       FontWeight="Bold"/>

            <!-- CameraAlert (NO CAMERA FEED) -->
            <TextBlock x:Name="CameraAlert"
                       Foreground="Red"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button x:Name="ActivateCameraButton"
                      Content="Activate Camera"
                      Click="ActivateCameraButton_Click"/>

              <Button x:Name="DeactivateCameraButton"
                      Content="Deactivate Camera"
                      Click="DeactivateCameraButton_Click"/>

              <Button x:Name="SnapshotButton"
                      Content="Capture Snapshot"
                      Click="SnapshotButton_Click"/>
            </StackPanel>

          </StackPanel>

          <!-- Playback Right -->
          <Border Grid.Column="1"
                  Margin="10"
                  Background="#202020"
                  CornerRadius="4">

            <StackPanel Margin="10">
              <TextBlock Text="Snapshots / Playback"
                         Foreground="White"
                         FontWeight="Bold"/>

              <ListBox x:Name="PlaybackList"
                       Background="#181818"
                       Foreground="White"
                       BorderThickness="0"
                       Height="350"/>
            </StackPanel>

          </Border>
        </Grid>
      </TabItem>

    </TabControl>
  </Border>

</Window>