<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="System_UI.JasUI"
        Width="900"
        Height="520"
        Title="Jaskaran UI - Climate and Drive Modes">

  <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
    <!-- Header -->
    <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#222" Padding="12">
      <TextBlock Text="Jaskaran UI - Climate and Drive Mode Control"
                 Foreground="White"
                 FontSize="20"
                 HorizontalAlignment="Center" />
    </Border>

    <!-- Climate Panel -->
    <Border Grid.Row="1" Grid.Column="0" Margin="16" Padding="12"
            CornerRadius="8" BorderBrush="#555" BorderThickness="1">
      <StackPanel Spacing="10">
        <TextBlock Text="Climate Control" FontSize="18" FontWeight="Bold" />

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Current:" Width="80" />
          <TextBlock x:Name="CurrentTempText" Text="-- C" FontWeight="SemiBold" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Target:" Width="80" />
          <TextBlock x:Name="TargetTempText" Text="-- C" FontWeight="SemiBold" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
          <TextBlock Text="Set Target:" Width="80" />
          <TextBox x:Name="TargetTempInput" Width="80" Watermark="e.g. 22" />
          <Button Content="Set"
                  Width="60"
                  Click="OnSetTempClicked" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
          <TextBlock Text="Pre-conditioning:" Width="110" />
          <TextBlock x:Name="PreCondStatusText" Text="OFF" />
          <Button Content="Toggle"
                  Width="80"
                  Click="OnTogglePreCondClicked" />
        </StackPanel>

        <Button Content="Step Climate Update"
                Margin="0,16,0,0"
                Click="OnClimateStepClicked" />

        <TextBlock Text="Climate Status:"
                   Margin="0,12,0,0"
                   FontWeight="Bold" />
        <TextBlock x:Name="ClimateStatusText"
                   Text="..."
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>

    <!-- Drive Mode + Battery Panel -->
    <Border Grid.Row="1" Grid.Column="1" Margin="16" Padding="12"
            CornerRadius="8" BorderBrush="#555" BorderThickness="1">
      <StackPanel Spacing="10">
        <TextBlock Text="Drive Mode Selector" FontSize="18" FontWeight="Bold" />

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Current Mode:" Width="100" />
          <TextBlock x:Name="CurrentModeText" Text="Normal" FontWeight="SemiBold" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
          <Button Content="Eco" Width="70" Click="OnEcoClicked" />
          <Button Content="Normal" Width="70" Click="OnNormalClicked" />
          <Button Content="Sport" Width="70" Click="OnSportClicked" />
        </StackPanel>

        <TextBlock Text="Battery Status:"
                   Margin="0,12,0,0"
                   FontWeight="Bold" />
        <TextBlock x:Name="BatteryStatusText"
                   Text="..."
                   TextWrapping="Wrap" />

        <Button Content="Load Next Battery Data"
                Margin="0,8,0,0"
                Click="OnBatteryNextClicked" />

        <TextBlock Text="Drive Mode Status:"
                   Margin="0,12,0,0"
                   FontWeight="Bold" />
        <TextBlock x:Name="DriveModeStatusText"
                   Text="..."
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>
  </Grid>
</Window>
